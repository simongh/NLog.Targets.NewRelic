<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>nlog.targets.newrelic</AssemblyName>
    <RootNamespace>NLog.Targets.NewRelic</RootNamespace>

    <Version>1.0.0</Version>

    <Authors>Simon Halsey</Authors>
    <Description>NLog target for NewRelic logging</Description>
    <CurrentYear>$([System.DateTime]::Now.ToString(yyyy))</CurrentYear>
    <Copyright>Copyright (c) $(CurrentYear) - Simon Halsey</Copyright>

    <PackageTags>NLog;NewRelic;log;logging</PackageTags>
    <PackageProjectUrl>https://github.com/simongh/NLog.Targets.NewRelic</PackageProjectUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="NLog" Version="4.7.2" />
  </ItemGroup>

</Project>
